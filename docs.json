{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "almond",
  "name": "ABS AI Center of Excellence",
  "colors": {
    "primary": "#000000",
    "light": "#FFFFFF",
    "dark": "#01B6E3"
  },
  "fonts": {
    "family": "Inter"
  },
  "icons": {
    "library": "lucide"
  },
  "favicon": {
    "light": "/favicon-light.svg",
    "dark": "/favicon-dark.svg"
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Docs",
        "groups": [
          {
            "group": "Getting started",
            "icon": "rocket",
            "pages": [
              "welcome",
              "feedback"
            ]
          },
          {
            "group": "SIERRA",
            "icon": "message-square-more",
            "pages": [
              "sierra/about-and-faq",
              "sierra/data-policy",
              "sierra/releases",
              "sierra/sierra-learning-series"
            ]
          },
          {
            "group": "Tango",
            "icon": "file-text",
            "pages": [
              "tango/about",
              "tango/installation-guide",
              "tango/watch-a-demo"
            ]
          },
          {
            "group": "AI Tools",
            "icon": "brain-circuit",
            "pages": [
              "ai-tools/cursor"
            ]
          }
        ]
      },
      {
        "tab": "API reference",
        "groups": [
          {
            "group": "Getting started",
            "icon": "square-terminal",
            "pages": [
              "api-reference/introduction",
              "api-reference/authentication"
            ]
          },
          {
            "group": "SIERRA API",
            "icon": "message-square-code",
            "openapi": "https://api.sierra.absconsulting.com/openapi.json"
          },
          {
            "group": "Documents Service",
            "icon": "file-code",
            "openapi": "https://documents.absconsulting.ai/openapi.json"
          }
        ]
      },
      {
        "tab": "Blog",
        "groups": [
          {
            "group": "Blog",
            "icon": "notebook-pen",
            "pages": [
              "blog"
            ]
          },
          {
            "group": "Articles",
            "hidden": true,
            "pages": [
              "articles/welcome-to-aicoe",
              "articles/free-tokens",
              "articles/buckle-up"
            ]
          }
        ]
      }
    ]
  },
  "navbar": {
    "primary": {
      "type": "button",
      "label": "Try SIERRA",
      "href": "https://sierra.absconsulting.com"
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg",
    "href": "https://portal.absconsulting.com"
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "mcp",
      "cursor"
    ]
  },
  "api": {
    "playground": {
      "display": "interactive"
    },
    "auth": {
      "method": "key",
      "name": "Api-Key",
      "in": "header"
    },
    "examples": {
      "languages": [
        "curl",
        "python",
        "javascript",
        "go"
      ],
      "defaults": "required",
      "prefill": true
    }
  }
}