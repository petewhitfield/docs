{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "almond",
  "name": "ABS AI Center of Excellence",
  "colors": {
    "primary": "#000000",
    "light": "#FFFFFF",
    "dark": "#01B6E3"
  },
  "fonts": {
    "family": "Inter"
  },
  "icons": {
    "library": "lucide"
  },
  "favicon": {
    "light": "/favicon-light.svg",
    "dark": "/favicon-dark.svg"
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Docs",
        "groups": [
          {
            "group": "Getting started",
            "pages": [
              "articles/welcome-to-aicoe",
              "blog",
              "feedback"
            ]
          },
          {
            "group": "SIERRA",
            "pages": [
              "sierra/about-and-faq",
              "sierra/data-policy"
            ]
          },
          {
            "group": "Tango",
            "pages": [
              "tango/markdown",
              "tango/code"
            ]
          },
          {
            "group": "AI Tools",
            "pages": [
              "ai-tools/cursor"
            ],
            "hidden pages": [
              "ai-tools/claude-code",
              "ai-tools/windsurf"
            ]
          }
        ]
      },
      {
        "tab": "API reference",
        "groups": [
          {
            "group": "Getting started",
            "icon": "rocket",
            "pages": [
              "api-reference/welcome"
            ]
          },
          {
            "group": "Documents Service",
            "icon": "file-text",
            "display": "simple",
            "openapi": "https://documents.absconsulting.ai/openapi.json"
          }
        ]
      }
    ]
  },
  "navbar": {
    "primary": {
      "type": "button",
      "label": "Get started",
      "href": "https://portal.absconsulting.com"
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg",
    "height": 48,
    "width": 150
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "mcp",
      "cursor"
    ]
  },
  "api": {
    "playground": {
      "display": "interactive"
    },
    "auth": {
      "method": "key",
      "name": "Api-Key",
      "in": "header"
    },
    "examples": {
      "languages": [
        "curl",
        "python",
        "javascript",
        "go"
      ],
      "defaults": "required",
      "prefill": true
    }
  }
}
